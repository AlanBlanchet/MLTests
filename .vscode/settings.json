{
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/*.egg-info": true,
    },
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "notebook.formatOnSave.enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=88",
        "--extend-ignore=E501,E203,E402,N812"
    ],
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
}